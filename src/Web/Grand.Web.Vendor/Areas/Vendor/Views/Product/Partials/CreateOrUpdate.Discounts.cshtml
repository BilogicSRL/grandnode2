@model ProductModel
<vc:vendor-widget widget-zone="product_details_discounts_top" additional-data="Model" />
@if (Model.AvailableDiscounts is {Count: > 0 })
{
<div class="mt-checkbox-list">
    @foreach (var discount in Model.AvailableDiscounts)
    {
        <label class="mt-checkbox mt-checkbox-outline control control-checkbox">
            <input type="checkbox" name="SelectedDiscountIds" value="@discount.Id"
                   @if (Model.SelectedDiscountIds != null && Model.SelectedDiscountIds.Contains(discount.Id)) { <text> checked="checked" </text>  } />@discount.Name
                 <div class="control__indicator"></div>
            </label>
    }
</div>
}
else
{
<div class="note note-info">
    @Html.Raw(Loc["Vendor.Catalog.Collections.Discounts.NoDiscounts"])
</div>
}
<vc:vendor-widget widget-zone="product_details_discounts_bottom" additional-data="Model" />